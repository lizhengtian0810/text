<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bird_sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/good_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cart_selector"
        android:button="@null" />

    <ImageView
        android:id="@+id/goods_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/good_check"
        android:scaleType="centerCrop"
        android:src="@drawable/launcher_icon" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/goods_pic"
        android:text="阿克苏苹果6个装"
        android:textColor="#666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_name"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/goods_pic"
        android:lines="2"
        android:text="(单价7.80元/500克，限松江)"
        android:textColor="#666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_desc"
        android:layout_toRightOf="@+id/goods_pic"
        android:gravity="center"
        android:text="价格:￥160.00"
        android:textColor="#FF7701"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/goods_pic"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/good_check"
        android:background="#c0c0c0"
        android:orientation="horizontal"
        android:padding="1dp" >

        <EditText
            android:id="@+id/goods_num"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="left|center_vertical"

            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:inputType="number"
            android:textColor="#666666"
            android:textSize="16sp" />
        <EditText
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:hint="请输入数字"
            android:inputType="number"
            android:textColor="#666666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/decrement_count"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/launcher_icon"
            android:layout_marginRight="1dp"
             />

        <Button
            android:id="@+id/add_count"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/launcher_icon"
             />
    </LinearLayout>
	<ImageView
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/launcher_icon"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"/>
</RelativeLayout>